.post
    background-color: gray
    padding: 1rem
    margin-top: 1rem
    color: white
    border-radius: 3px

    > div:first-child
        display: flex
        justify-content: space-between
        margin-bottom: 1rem

    .service
        margin-bottom: .4rem
        font-size: 1.4rem

    .date
        text-transform: uppercase
        font-size: .8rem

    .user
        background: dimGray
        display: flex
        justify-content: center
        align-items: center
        height: 1.5rem
        padding: 0 .3rem
        border-radius: 2px

    img
        width: 100%
        height: auto
